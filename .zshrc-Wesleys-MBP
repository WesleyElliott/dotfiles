# Alias for emulator
alias emu="~/Library/Android/sdk/emulator/emulator -avd Pixel_5_API_31 -gpu host -no-snapshot-load > /dev/null 2>&1 &"

fzf_git_reflog() {
    local selection=$(
      git reflog --color=always "$@" |
        fzf --no-multi --ansi --no-sort --no-height \
            --preview "git show --color=always {1}"
      )
    if [[ -n $selection ]]; then
        git show $(echo $selection | cut -d' ' -f1)
    fi
}

alias grl='fzf_git_reflog'
