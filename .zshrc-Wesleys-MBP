# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/wesley/Downloads/google-cloud-sdk/path.zsh.inc' ]; then . '/Users/wesley/Downloads/google-cloud-sdk/path.zsh.inc'; fi

